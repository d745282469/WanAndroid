<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:elevation="@dimen/page_padding"
    android:layout_marginBottom="@dimen/page_padding"
    >

    <LinearLayout
        android:id="@+id/ll_article_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/page_padding"
        android:paddingBottom="@dimen/page_padding"
        android:paddingRight="@dimen/page_padding"
        android:background="@drawable/page_select_result"
        android:clickable="true">

        <ImageView
            android:id="@+id/iv_project_img"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            tools:ignore="MissingConstraints"
            android:src="@mipmap/ic_launcher_round"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            tools:ignore="MissingConstraints"
            >

            <TextView
                android:id="@+id/tv_project_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="@dimen/nav_username_text_size"
                android:textColor="@color/page_text_normal"
                android:singleLine="true"
                android:ellipsize="end"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/project_author_icon"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/tv_project_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@color/page_text_gray"
                    android:textSize="@dimen/page_text_size_small_title"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="7dp"/>

                <TextView
                    android:id="@+id/tv_project_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@color/page_text_gray"
                    android:textSize="@dimen/page_text_size_small_title"
                    android:layout_marginRight="7dp"/>

                <TextView
                    android:id="@+id/tv_project_chapter_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textSize="8dp"
                    android:textColor="@color/page_text_gray"
                    android:background="@drawable/tv_border_rect_gray"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_project_desc"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="1111111111111111111111111111111111111111111111111111111111111111"
                android:textSize="@dimen/page_text_size_normal"
                android:textColor="@color/page_text_normal"
                android:maxLines="2"
                android:ellipsize="end"
                android:gravity="bottom"/>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>