<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:orientation="horizontal"
    android:background="@color/colorPrimary"
    android:paddingLeft="@dimen/page_padding"
    android:paddingRight="@dimen/page_padding"
    android:paddingStart="0dp"
    android:paddingEnd="0dp">

    <LinearLayout
        android:id="@+id/ll_bar_back"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/page_select_result"
        android:clickable="true"
        >
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/page_line_arrow"
            android:rotation="180"
            android:backgroundTint="#ffffff"
            />
    </LinearLayout>



    <TextView
        android:id="@+id/tv_bar_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="@string/app_name"
        android:layout_weight="1"
        android:textSize="@dimen/page_toolbar_title_text_size"
        android:textColor="@color/page_toolbar_text"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end"
        />

    <LinearLayout
        android:id="@+id/ll_bar_right"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/page_select_result"
        android:clickable="true">
        <ImageView
            android:id="@+id/iv_bar_right"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/home_article_like_def"
            android:backgroundTint="#ffffff"
            />

    </LinearLayout>

</LinearLayout>